<% include ../../partials/header %>
<div class="x_panel">
	<div class="x_title">
		<h2>Users<small></small></h2>
		<div class="clearfix"></div>
	</div>
	<div class="x_content">
    <table class="table table-striped table-bordered datatable-fixed-header">
        <thead>
            <tr>
                <th scope="col">Fullname</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col" class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < users.length; i++) { %>
            <tr>
                <td><%= users[i].first_name %> <%= users[i].middle_name %> <%= users[i].last_name %></td>
                <td><%= users[i].username %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].role %></td>
                <td class="actions">
                  <a href="/users/view/<%= users[i].id %>" >View</a>
                  <a href="/users/edit/<%= users[i].id %>">Edit</a>
                </td>
            </tr>
          <% } %>
        </tbody>
    </table>
  </div>
</div>
<% include ../../partials/footer %>
